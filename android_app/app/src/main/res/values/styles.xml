<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="full_screen_dialog" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen" />

    <style name="checkbox_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ScreenStyle" parent="">
        <item name="background">@color/black</item>
    </style>


    <style name="LabelStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TittleStyle" parent="LabelStyle">
        <item name="android:textSize">22sp</item>
    </style>

</resources>